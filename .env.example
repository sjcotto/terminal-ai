# Copy this file to .env and configure your AI provider

# Choose your AI provider: "anthropic" or "ollama" (default: anthropic)
AI_PROVIDER=anthropic

# Anthropic Configuration (required if using anthropic provider)
ANTHROPIC_API_KEY=your-api-key-here

# Ollama Configuration (optional, only used if AI_PROVIDER=ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b

# MCP (Model Context Protocol) Configuration
# Enable MCP tool support (only works with Anthropic provider currently)
# When enabled, filesystem and git MCP servers are active by default
ENABLE_MCP=true

# Override default MCP servers (both enabled by default when ENABLE_MCP=true)
# Set to "false" to disable a specific server
# MCP_FILESYSTEM_ENABLED=false
# MCP_GIT_ENABLED=false
